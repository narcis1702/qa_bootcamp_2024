<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="PetStore" verbose="1" >
    <listeners>
        <listener class-name="customReporting.CustomTestReporter"></listener>
        <listener class-name="customReporting.CustomTestListener"></listener>
    </listeners>
    <test name="Pet Test" >
        <classes>
            <class name="PetStore.PetTest" />
        </classes>
    </test>
    <test name="User Test" >
        <classes>
            <class name="PetStore.UserTest" />
        </classes>
    </test>
    <test name="Store Test" >
        <classes>
            <class name="PetStore.StoreTest" />
        </classes>
    </test>
</suite>